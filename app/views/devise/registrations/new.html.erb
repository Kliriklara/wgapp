<!-- <h2>Sign up</h2> -->

<div id="login-container">

<div class="login">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %>
  <%= f.email_field :name %></div>  
  
  <div><%= f.label :email, "Email" %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password, "Password" %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Confirm PW" %>
  <%= f.password_field :password_confirmation %></div>

  <div style="clear: both;"><%= f.submit "Registrieren" %></div>
<% end %>



</div>
<div class="shared_links"><%= render :partial => "devise/shared/links" %></div>
</div>